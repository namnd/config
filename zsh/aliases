#!/bin/sh

export CLICOLOR=1

alias vi='nvim'
alias vim='nvim'

alias ll='ls -l'
alias all='ls -al'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'
chpwd() { ll }                          # always list upon pwd changed
mcd () { mkdir -p "$1" && cd "$1"; }    # make new dir and cd into it

# git aliases
alias g='git'
alias gs='g status'
alias gc='g checkout'
alias gp='g pull'
alias gd='g diff'
alias gb='g branch'
alias gl='g log'
alias gg='g graph'

alias ta='tmux attach'
alias tat='tmux attach -t'
alias tl='tmux ls'
alias tn='tmux new -s'

alias dp='docker ps'
alias dpa='docker ps -a'
alias dr='docker restart'
alias dl='docker logs -f'
alias dcd='docker-compose down'
alias dcu='docker-compose up -d --build'

alias tf='terraform'
alias cat='bat'
