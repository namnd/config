# move to another space
alt - 1 : yabai -m window --space 1
alt - 2 : yabai -m window --space 2
alt - 3 : yabai -m window --space 3
alt - 4 : yabai -m window --space 4
alt - 5 : yabai -m window --space 5

# windows
cmd + shift - o : ~/dotfiles/bin/cycle_clockwise.sh
cmd + shift - f : yabai -m window --toggle zoom-parent
cmd + shift - s : yabai -m window --toggle split
cmd + shift - j : yabai -m window --focus west
cmd + shift - k : yabai -m window --focus east

# displays
cmd + shift - d : yabai -m display --focus recent

# restart yabai
cmd + shift - p : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
